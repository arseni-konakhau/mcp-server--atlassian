{
  "jsonrpc": "2.0",
  "id": 9,
  "method": "tools/call",
  "params": {
    "name": "jira_search",
    "arguments": {
      "jql": "assignee = currentUser() ORDER BY updated DESC",
      "limit": 10
    }
  }
}

